<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bordered"
        android:orientation="horizontal">

        <Button
            android:id="@+id/menu_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/ic_menu_open" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="10"
            android:background="@color/cast_expanded_controller_text_color"
            android:hint="Search query"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textSize="15sp" />

        <!--<ImageButton-->
            <!--android:id="@+id/empty_search"-->
            <!--style="@style/expandButton"-->
            <!--android:src="@drawable/ic_collapse_00010" />-->

    </LinearLayout>

</RelativeLayout>